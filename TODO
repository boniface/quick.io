				.extra1		= &one,
			},

	fn() {
		...
	out_unlock:
		shm_unlock(shp);
	out:
		return err;
	}

	fn () {
		...
	out_unlock0:
		ipc_unlock_object(&shp->shm_perm);
	out_unlock1:
		rcu_read_unlock();
	out_up:
		up_write(&shm_ids(ns).rw_mutex);
		return err;
	}
