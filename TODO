	Struct init:
		static struct ctl_table net_core_table[] = {
		#ifdef CONFIG_NET
			{
				.procname	= "wmem_max",
				.data		= &sysctl_wmem_max,
				.maxlen		= sizeof(int),
				.mode		= 0644,
